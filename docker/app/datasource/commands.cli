# Mark the commands below to be run as a batch
batch

# Add the PG driver
module add --name=com.postgresql --resources=$JBOSS_HOME/modules/org/postgres/main/postgresql-42.2.5.jar --dependencies=javax.api,javax.transaction.api

# Add the datasource
data-source add --jndi-name=java:/jdbc/${env.DB_NAME} --name=${env.DB_NAME} --connection-url=${env.DB_URI} --driver-name=com.postgresql --user-name=${env.DB_USER} --user-password=${env.DB_PASS}

# Execute the batch
run-batch